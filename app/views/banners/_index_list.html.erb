
<br>

<%= link_to 'New Banner', new_banner_path(locale: I18n.locale), :class=>"btn btn-info pull-right" if user_signed_in? && (current_user.is_admin || @user == current_user) %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <th><%= t(:title) %></th>
      <th><%= t(:web_link) %></th>
      <th><%= t(:start_date) %></th>
      <th><%= t(:end_date) %></th>
      <th><%= t(:position) %></th>
      <th><%= t(:status) %></th>
      <% if (user_signed_in? && (current_user.is_admin || (@banners.collect(&:user).include? current_user))) %><th colspan="2"></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= image_tag banner.image.url(:tiny) %></td>
        <td><%= link_to banner.title %></td>
        <td><%= link_to banner.web_link, banner.web_link %></td>
        <td><%= banner.start_date %></td>
        <td><%= banner.end_date %></td>
        <td><%= banner.position %></td>
        <td><%= banner.expired? ? "Expired" : "Running" %></td>
        <% if user_signed_in? && (current_user.is_admin || banner.user == current_user) %>
          <td><%= link_to t(:edit), edit_banner_path(banner, locale: I18n.locale) %></td>
          <td><%= link_to t(:destroy), [banner, locale: I18n.locale] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
