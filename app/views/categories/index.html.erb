<h1>Listing categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to t(:edit), edit_category_path(category, locale: I18n.locale) %>  <%= link_to t(:destroy), [category, locale: I18n.locale] , method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Sub Categories', category_sub_categories_path(category, locale: I18n.locale) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path(locale: I18n.locale)%>
