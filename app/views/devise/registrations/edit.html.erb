<div class="jumbotron">
  <h2 class="user-upload-preview">
    <%= image_tag resource.avatar.url(:thumb), :class=>"#{'missing_tiny_image' if resource.avatar_file_name.nil? }"%><br/>
    Edit <%= resource_name.to_s.humanize %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-3 form-group">
        <%= f.file_field :avatar %></div>

      <div class="col-md-3 form-group"><%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, :placeholder=>"Name", :class=>"form-control"   %></div>

      <div class="col-md-3 form-group"><%= f.label :username %><br />
      <%= f.text_field :username, :placeholder=>"Username", :class=>"form-control"   %></div>

      <div class="col-md-3 form-group"><%= f.label :email %><br />
      <%= f.email_field :email, :placeholder=>"Email", :class=>"form-control"   %></div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <div><%= f.label :address %><br />
      <%= f.text_area :address, :placeholder=>"Address", :class=>"form-control"   %></div>
    </div>

    <div class="row">
      <div class="col-md-3 form-group">
        <%= f.label :city %><br />
        <%= f.text_field :city, :placeholder=>"City", :class=>"form-control" %>
      </div>

      <div class="col-md-3 form-group"><%= f.label :state %><br />
      <%= f.text_field :state, :placeholder=>"State", :class=>"form-control" %></div>

      <div class="col-md-3 form-group"><%= f.label :country %><br />
      <%= f.text_field :country, :placeholder=>"Country", :class=>"form-control" %></div>

      <div class="col-md-3 form-group"><%= f.label :zip %><br />
      <%= f.text_field :zip, :placeholder=>"Zip", :class=>"form-control" %></div>
    </div>

    <div class="row">
      <div class="col-md-4 form-group"><%= f.label :facebook_link %><br />
      <%= f.text_field :facebook_link, :placeholder=>"Facebook URL", :class=>"form-control" %></div>

      <div class="col-md-4 form-group"><%= f.label :twitter_link %><br />
      <%= f.text_field :twitter_link , :placeholder=>"Twitter URL", :class=>"form-control"%></div>

      <div class="col-md-4 form-group"><%= f.label :linkedin_link %><br />
      <%= f.text_field :linkedin_link, :placeholder=>"Linkedin URL", :class=>"form-control" %></div>
    </div>

    <div class="row">
      <div class="col-md-6 form-group"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", :placeholder=>"New Password", :class=>"form-control" %></div>

      <div class="col-md-6 form-group"><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"Confirm New Password", :class=>"form-control" %></div>
    </div>

    <div class="form-group"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :placeholder=>"Current Password", :class=>"form-control" %></div>

    <div><%= f.submit "Update", :class=>"btn btn-success" %></div>
  <% end %>

</div>

<script>
  var preview = $(".user-upload-preview img");
  $("#user_avatar").change(function(event){
     var input = $(event.currentTarget);
     var file = input[0].files[0];
     var reader = new FileReader();
     reader.onload = function(e){
         image_base64 = e.target.result;
         preview.attr("src", image_base64);
     };
     reader.readAsDataURL(file);
  });

</script>