<div class="jumbotron">
  <div class="small_form">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group"><%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, required: true, :placeholder=>"Name", :class=>"form-control"  %></div>

      <div class="form-group"><%= f.label :username %><br />
      <%= f.text_field :username, required: true, :placeholder=>"Username", :class=>"form-control"  %></div>

      <div class="form-group"><%= f.label :email %><br />
      <%= f.email_field :email, required: true, :placeholder=>"Email", :class=>"form-control"  %></div>

      <div class="form-group"><%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", required: true, :placeholder=>"Password", :class=>"form-control"  %></div>

      <div class="form-group"><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true, :placeholder=>"Confirm Password", :class=>"form-control"  %></div>

      <div class="pull-right">
        <%= f.submit "Sign up", :class=> "btn btn-success pull-right" %><br/><br/>
        <small><i>Only business should register</i></small>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>