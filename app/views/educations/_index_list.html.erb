<br>
<%= link_to 'New education', new_education_path, :class=>"btn btn-info pull-right" if user_signed_in? && (current_user.is_admin || @user == current_user) %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <% if @user.is_admin %><th>Owner</th> <% end %>
      <th>Title</th>
      <th>Web link</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Store</th>
      <th>Education Type</th>
      <th>Status</th>
      <% if (user_signed_in? && (current_user.is_admin || (@educations.collect(&:user).include? current_user))) %><th colspan="2"></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= image_tag education.image.url(:tiny) %></td>
        <% if @user.is_admin %><td> <%= link_to education.user.name, profile_path(username: education.user.username) %> </td> <% end %>
        <td><%= link_to education.title %></td>
        <td><%= link_to education.web_link, education.web_link %></td>
        <td><%= education.start_date %></td>
        <td><%= education.end_date %></td>
        <td><% education.branches.collect(&:store).uniq.each do |s| %>
            <%= link_to s.name, store_show_path(s) %> <br/>
          <% end %>
        </td>
        <td><%= raw education.education_types.collect(&:name).join("<br/>") %></td>
        <td><%= education.expired? ? "Expired" : "Running" %></td>
        <% if user_signed_in? && (current_user.is_admin || education.user == current_user) %>
          <td><%= link_to 'Edit', edit_education_path(education) %></td>
          <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>