<script>
	$(document).ready(function(){
		/* smooth scrolling for scroll to top */
		$('.scroll-top').click(function() {
			$('body,html').animate({ scrollTop: 0 }, 600);
			return false;
		})

		$('.carousel').carousel({
			interval: 5000
		});

		$('.carousel-video').carousel({
			interval: 7000
		});

	})
	
</script>
