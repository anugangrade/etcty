<div class="row">
	<div class="col-lg-8 col-sm-8 col-md-8 col-xs-12 no-pd no-mg">
		
		<div id="banner_slider" class="carousel carousel-fade">
			<div class="carousel-inner ">
				<% @banners.each_with_index do |banner, index| %>
					<div class="item <% if index==0 %>active <% end %>">
						<%= banner.web_link.present? ? link_to(image_tag(banner.image.url(:thumbnail), :class=>"thumbnail img-responsive banner_image"), banner.web_link) : image_tag(banner.image.url(:thumbnail), :class=>"thumbnail img-responsive banner_image") %>
					</div>
				<% end %>
			</div>
		</div>

		<% @deal_types.each do |deal_type| %>
			<div class="col-md-6" style="margin-bottom: 20px;">
				<div class="thumbnail text-center bg-thmb">
					<%= link_to deal_type.name, deals_path(deal_type: [deal_type.id]) %>
				</div>
				<div id="mydealtype<%= deal_type.id %>" class="carousel carousel-fade">
					<div class="carousel-inner ">
						<% deal_type.deals_within_today.each_with_index do |deal, index| %>
							<div class="item <% if index==0 %>active <% end %> thumbnail">
								<%= deal.web_link.present? ? link_to(image_tag(deal.image.url(:thumbnail), :class=>"img-responsive sliding_home_image"), deal.web_link) : (image_tag deal.image.url(:thumbnail), :class=>"img-responsive sliding_home_image") %>
							</div>
						<% end %>
					</div>
				</div>
				<!-- End Carousel -->
			</div>
		<% end %>
	</div>
	<!--slider-->
	<div class="col-lg-4 col-sm-4 col-md-4 col-xs-12 bdr-side" style="overflow: hidden;">
		<br />
		<div class="thumbnail text-center bg-thmb">
			<%= link_to "Featured Video", video_advs_path %>
		</div>
		<div class="flex-video widescreen">
			<div id="myvideo" class="carousel carousel-fade" style="margin-top: -25px !important;">
				<div class="carousel-inner ">
					<% if @videos.present? %>
						<% @videos.each_with_index do |video, index| %>
							<div class="item <% if index==0 %>active <% end %> thumbnail" style="height:230px;">
								<iframe allowfullscreen="" height="230" src="http://www.youtube.com/embed/<%= video.youtube_url.split('=')[1] %>?feature=player_detailpage" frameborder="0">
									</iframe>
							</div>
						<% end %>
					<% else %>
						<iframe allowfullscreen="" src="http://www.youtube.com/embed/6NbAAmDuv_8?feature=player_detailpage" frameborder="0">
						</iframe>
					<% end %>
				</div>
			</div>
		</div>
		<div class="thumbnail text-center bg-thmb">
			Coupons
		</div>
		<img class="thumbnail img-responsive" src="http://placehold.it/351x160/" alt="Slide1"/>
		<div class="thumbnail text-center bg-thmb">
			Coupons
		</div>
		<img class="thumbnail img-responsive" src="http://placehold.it/351x160/" alt="Slide1"/>
	</div>
</div>
<!--row end-->
