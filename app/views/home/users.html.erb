<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:tiny), :class=>"missing_tiny_image" %></td>
        <td><%= user.name %></td>
        <td><%= link_to user.username, profile_path(locale: I18n.locale,username: user.username) %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin ? "Admin" : "User" %></td>        
        <td><%= link_to "#{user.block ? 'Unblock' : 'Block'}", block_user_path(user, locale: I18n.locale) if !user.is_admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

