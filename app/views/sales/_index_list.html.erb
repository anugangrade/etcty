
<br>

<%= link_to 'New Sale', new_sale_path, :class=>"btn btn-info pull-right" if user_signed_in? && @user == current_user %>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Web link</th>
      <th>Start date</th>
      <th>End date</th>
      <% if (user_signed_in? && (@sales.collect(&:user).include? current_user)) %><th colspan="2"></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= image_tag sale.image.url(:tiny) %></td>
        <td><%= link_to sale.title %></td>
        <td><%= link_to sale.web_link, sale.web_link %></td>
        <td><%= sale.start_date %></td>
        <td><%= sale.end_date %></td>
        <% if user_signed_in? && sale.user == current_user %>
          <td><%= link_to 'Edit', edit_banner_path(sale) %></td>
          <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>