<div class="load">
	<%= image_tag "loading.gif" %>
</div>

<div class="row">
	<div class="col-md-3">
		<div class="panel-group" id="accordion">
			<% @categories.each do|category| %>
			  <div class="panel panel-default">
			    <div class="panel-heading">
			      <h4 class="panel-title">
			        <%= link_to category.name, sales_path(locale: I18n.locale, category_id: category.id), remote: true, :class=> "category_search" %>
			        <a data-toggle="collapse" data-parent="#accordion" href="#category_<%= category.id %>" style="float:right">
			        	<%= image_tag "down_arrow.png", :class=>"down_arrow" %>
			        </a>
			      </h4>
			    </div>
			    <div id="category_<%= category.id %>" class="panel-collapse collapse">
			      <div class="panel-body">
			        <ul class="list-group">
						<% category.sub_categories.each do |sub_category| %>
							<% if @sub_categories.include? sub_category %>
							  <li class="list-group-item">
							    <%= link_to sub_category.name, sales_path(locale: I18n.locale, sub_category_id: sub_category.id), remote: true, :class=> "category_search"%>
							  </li>
							<% end %>
						<% end %>
					</ul>
			      </div>
			    </div>
			  </div>
			<% end %>
		</div>

		<div class="filter_box">
			<%= form_tag sales_path(locale: I18n.locale), :method=> "get", :class=>"filter_form", remote: true do %>
				<h4><%= t(:filter_by) %> : </h4>
				<h5><%= t(:store) %></h5><%= text_field_tag "store_id" %><br/>
				<h5><%= t(:city) %></h5><%= text_field_tag "city", "", :class=>"form-control" %><br/>
				<h5>ZIP</h5><%= text_field_tag "zip", "", :class=>"form-control" %><br/>
				<h5>Type</h5>
				<% SaleType.all.limit(4).each do |sale_type| %>
					<% if params["sale_type"] %>
						<%= check_box_tag "sale_type[]", sale_type.id, params["sale_type"][0].to_i ==sale_type.id  ? true : false %>
					<% else %>
						<%= check_box_tag "sale_type[]", sale_type.id %>
					<% end %>
					<%= sale_type.name %><br/>
				<% end %>
				<%= submit_tag "Submit", :class=>"btn btn-success" %>
			<% end %>
		</div>
	</div>
	<div class="col-md-9">
		<div class="row" >
	      <div class="sale_block">
	        <%= render @sales %>
	      </div>
	    </div>
	    <% if !@sales.next_page.nil? %>
	      <div class="load-more-container">
	        <%= image_tag "loading1.gif", style: "display:none;", class: "loading-gif" %>
	        <%= link_to "Load More", sales_path(locale: I18n.locale, page: 2), class: "btn btn-primary btn-lg adv-load-more" %>
	      </div>
	    <% end %>
	</div>
</div>


<script>
	$(".filter_form").submit(function(){
		if (($("#store_id").val() != "") || ($("#city").val() != "") || ($("#zip").val() != "") || ($("#sale_type_").val() != "") ){
			$(".load").show()
		}
	})

	$(".category_search").click(function(){
		$(".load").show()
	})

	$(function() {
    $("#store_id").tokenInput("/get_store.json", {
    	tokenLimit: 1
    });
    $("#city").tokenInput("/get_city.json", {
    	tokenLimit: 1
    });
    $("#zip").tokenInput("/get_zip.json", {
    	tokenLimit: 1
    });
  });

	
  $(document).ready(function () {
    // when the load more link is clicked
    $('a.adv-load-more').click(function () {
      $('.adv-load-more').hide();
      $('.loading-gif').show();

      $.ajax({
        type: "GET",
        url: $(this).attr('href'),
        dataType: "script"
      });
      return false;
    });
  });

</script>
