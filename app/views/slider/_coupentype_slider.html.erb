<div class="carousel-inner ">
	<% cache coupen_type do %>
		<% coupen_type.coupens_within_today(session[:country]).each_with_index do |coupen, index| %>
			<div class="item <% if index==0 %>active <% end %> thumbnail">
				<%= link_to(image_tag(coupen.image.url(:medium), :class=>"img-responsive"), data_modal_path(id: coupen.id, model: "Coupen"), remote: true) %>
			</div>
		<% end %>
	<% end %>
</div>