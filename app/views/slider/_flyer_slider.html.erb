<div class="carousel-inner ">
	<% cache @flyers do %>
		<% @flyers.each_with_index do |flyer, index| %>
			<div class="item <% if index==0 %>active <% end %>">
				<%= link_to(image_tag(flyer.image.url(:medium), :class=>"thumbnail img-responsive flyer_image"), data_modal_path(id: flyer.id, model: "Flyer"), remote: true) %>
			</div>
		<% end %>
	<% end %>
</div>