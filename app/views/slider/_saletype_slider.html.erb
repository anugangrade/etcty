<div class="carousel-inner ">
	<% cache sale_type do %>
		<% sale_type.sales_within_today(session[:country]).each_with_index do |sale, index| %>
			<div class="item <% if index==0 %>active <% end %> thumbnail">
				<%= link_to(image_tag(sale.image.url(:medium), :class=>"img-responsive sliding_home_image"), data_modal_path(id: sale.id, model: "Sale"), remote: true) %>
			</div>
		<% end %>
	<% end %>
</div>