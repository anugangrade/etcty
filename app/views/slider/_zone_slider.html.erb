<div class="carousel-inner ">
	<% zone.advs_within_today.each_with_index do |advertisement, index| %>
		<div class="item <% if index==0 %>active <% end %> thumbnail">
			<%= advertisement.web_link.present? ?  link_to(image_tag(advertisement.image.url(:thumbnail), :class=>"img-responsive sliding_home_image"), advertisement.web_link) : image_tag(advertisement.image.url(:thumbnail), :class=>"img-responsive sliding_home_image") %>
		</div>
	<% end %>
</div>