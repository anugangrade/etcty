<div class="jumbotron">
  <div class="small_form">
    <%= form_for([@category, @sub_category]) do |f| %>
      <div class="form-field">
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="form-action">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>