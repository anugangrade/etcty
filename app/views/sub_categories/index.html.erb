<h1>sub categories of <%= @category.name %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <td>
          <%= link_to t(:edit), edit_category_sub_category_path(@category, sub_category, locale: I18n.locale) %>
          <%= link_to t(:destroy), category_sub_category_path(I18n.locale, @category.id, sub_category.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub category', new_category_sub_category_path(@category, locale: I18n.locale) %>
