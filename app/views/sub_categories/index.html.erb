<h1>sub categories of <%= @category.name %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <td><%= link_to 'Edit', edit_category_sub_category_path(@category, sub_category) %></td>
        <td><%= link_to 'Destroy', [@category, sub_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub category', new_category_sub_category_path(@category) %>
