<h1>Listing templates</h1>

<table>
  <thead>
    <tr>
      <th>Logo position</th>
      <th>Logo image type</th>
      <th>Bg color</th>
      <th>Bg image</th>
      <th>No of images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.logo_position %></td>
        <td><%= template.logo_image_type %></td>
        <td><%= template.bg_color %></td>
        <td><%= template.bg_image %></td>
        <td><%= template.no_of_images %></td>
        <td><%= link_to 'Show', template %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path %>
