<div class="load">
  <%= image_tag "loading.gif" %>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="panel-group" id="accordion">
      <% @categories.each do|category| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <%= link_to category.name, video_advs_path(locale: I18n.locale, category_id: category.id), remote: true, :class=> "category_search" %>
              <a data-toggle="collapse" data-parent="#accordion" href="#category_<%= category.id %>" style="float:right">
                <%= image_tag "down_arrow.png", :class=>"down_arrow" %>
              </a>
            </h4>
          </div>
          <div id="category_<%= category.id %>" class="panel-collapse collapse">
            <div class="panel-body">
              <ul class="list-group">
            <% category.sub_categories.each do |sub_category| %>
              <% if @sub_categories.include? sub_category %>
                <li class="list-group-item">
                  <%= link_to sub_category.name, video_advs_path(locale: I18n.locale, sub_category_id: sub_category.id), remote: true, :class=> "category_search"%>
                </li>
              <% end %>
            <% end %>
          </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="filter_box">
      <%= form_tag video_advs_path(locale: I18n.locale), :method=> "get", :class=>"filter_form", remote: true do %>
        <h4><%= t(:filter_by) %> : </h4>
        <h5><%= t(:store) %></h5><%= text_field_tag "store_id" %><br/>
        <h5><%= t(:city) %></h5><%= text_field_tag "location[city]", "", :class=>"form-control" %><br/>
        <h5>ZIP</h5><%= text_field_tag "location[zip]", "", :class=>"form-control" %><br/>
        <%= submit_tag t(:submit), :class=>"btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row" >
      <div class="video_adv_block">
        <%= render @video_advs %>
      </div>
    </div>
    <% if !@video_advs.next_page.nil? %>
      <div class="load-more-container">
        <%= image_tag "loading1.gif", style: "display:none;", class: "loading-gif" %>
        <%= link_to t(:load_more), video_advs_path(locale: I18n.locale, page: 2), class: "btn btn-primary btn-lg adv-load-more" %>
      </div>
    <% end %>
  </div>
</div>




<script>
  $(".filter_form").submit(function(){
    if (($("#store_id").val() != "") || ($("#location_city").val() != "") || ($("#location_zip").val() != "") ){
      $(".load").show()
    }
  })

  $(".category_search").click(function(){
    $(".load").show()
  })

  $(function() {
    $("#store_id").tokenInput("/get_store.json", {
      tokenLimit: 1
    });
    $("#location_city").tokenInput("/get_city.json", {
      tokenLimit: 1
    });
    $("#location_zip").tokenInput("/get_zip.json", {
      tokenLimit: 1
    });
  });

  $(document).ready(function () {
    // when the load more link is clicked
    $('a.adv-load-more').click(function () {
      $('.adv-load-more').hide();
      $('.loading-gif').show();

      $.ajax({
        type: "GET",
        url: $(this).attr('href'),
        dataType: "script"
      });
      return false;
    });
  });

</script>