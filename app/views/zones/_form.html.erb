<div class="jumbotron">
  <div class="small_form">
    <%= form_for(@zone) do |f| %>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true, :class=>"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :amount %><br>
        <%= f.number_field :amount, required: true, :class=>"form-control" %>
      </div>
      <div class="form-action">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>